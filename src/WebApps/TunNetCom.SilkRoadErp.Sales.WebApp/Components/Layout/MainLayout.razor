<div class="layout has-sidebar fixed-sidebar fixed-header">
	<SidebarComponent @ref="sideBarComponent" @rendermode="InteractiveServer" />

	@* <div @onclick="@(e => sideBarComponent?.MouseClickedInOverlay())" id="overlay" class="overlay @(sideBarComponent?. == true ? "active" : "")"></div> *@
    
	<div class="layout">
		<main class="content" @onclick="@(e => sideBarComponent?.MouseClickedInContent())">
			<div>
				<a @onclick="(e => sideBarComponent?.BtnToggleClicked())" id="btn-toggle" href="#" class="sidebar-toggler break-point-sm">
					<i class="ri-menu-line ri-xl"></i>
				</a>
			</div>
@* 			<TunNetCom.SilkRoadErp.Sales.WebApp.Components.Layout.LanguageSelector />
 *@
			<div class="main-content">
				@Body
			</div>
			<FooterComponent />
