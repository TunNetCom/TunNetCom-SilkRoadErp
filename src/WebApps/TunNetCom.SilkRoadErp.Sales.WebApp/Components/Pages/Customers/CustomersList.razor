        border-bottom: 1px solid var(--border-color);
    }

    .clients-grid .rz-datatable thead th {
        font-weight: 500;
        padding: 0.75rem 1rem;
        text-align: left;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.02em;
    }

    .clients-grid .rz-datatable tbody tr {
        border-bottom: 1px solid var(--border-color);
    }

