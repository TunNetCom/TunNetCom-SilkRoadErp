@code {
    private RadzenDataGrid<RetourMarchandiseFournisseurBaseInfo> retoursGrid = default!;
    private List<RetourMarchandiseFournisseurBaseInfo> retoursList = new();
    private IList<RetourMarchandiseFournisseurBaseInfo> selectedRetours = new List<RetourMarchandiseFournisseurBaseInfo>();
    private int totalCount = 0;
    private decimal totalGrossAmount = 0;
    private decimal totalVatAmount = 0;
    private decimal totalNetAmount = 0;
    private int pageSize = GridPageSizeConstants.PageSize10;
    private SearchCriteria searchCriteria = new SearchCriteria();
    private List<ProviderResponse> _filteredProviders = new();

    protected override async Task OnInitializedAsync()
    {
        _logger.LogInformation("RetourMarchandiseFournisseurList.OnInitializedAsync called");
        
        await LoadProviders(new LoadDataArgs { Filter = string.Empty });

        searchCriteria.PeriodFilter = "CurrentMonth";
        var (startDate, endDate) = PeriodFilterHelper.GetDateRangeFromPeriod(
            searchCriteria.PeriodFilter, 
            searchCriteria.StartDate, 
            searchCriteria.EndDate);
        searchCriteria.StartDate = startDate;
        searchCriteria.EndDate = endDate;

        await Callback(new LoadDataArgs { Skip = 0, Top = pageSize });
    }

    async Task LoadProviders(LoadDataArgs args)
    {
        var parameters = new QueryStringParameters
        {
            PageNumber = 1,
            PageSize = 7,
            SearchKeyword = args?.Filter ?? string.Empty
        };

        try
        {
            var pagedProviders = await ProviderService.GetPagedAsync(parameters, default);
            _filteredProviders = pagedProviders.Items.ToList();
        }
        catch (Exception ex)
        {
            _filteredProviders = new List<ProviderResponse>();
        }

        await InvokeAsync(StateHasChanged);
    }

    private void ViewRetour(string id)
    {
        NavigationManager.NavigateTo($"/add_or_update_retour_marchandise_fournisseur/{id}");
    }

    private async Task SearchRetours()
    {
        await Callback(new LoadDataArgs { Skip = 0, Top = pageSize });
    }

    private async Task ValidateSelectedRetours()
    {
        if (selectedRetours == null || !selectedRetours.Any())
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Warning, Summary = Localizer["Attention"], Detail = Localizer["Select_At_Least_One_Retour"] });
            return;
        }

        var count = selectedRetours.Count;
        var confirmed = await DialogService.Confirm(
            string.Format(Localizer["Confirmation_Validation_Retours"], count, count > 1 ? "s" : ""),
            Localizer["Confirmation_Validation_Titre"],
            new ConfirmOptions() { OkButtonText = Localizer["Oui"], CancelButtonText = Localizer["Non"] });

        if (confirmed != true)
        {
            return;
        }

        var ids = selectedRetours.Select(r => r.Number).ToList();
        var result = await RetourService.ValidateRetourMarchandiseFournisseurAsync(ids, default);
        
        if (result.IsSuccess)
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = Localizer["Success"], Detail = Localizer["Validation_Success_Retours"] });
            selectedRetours.Clear();
            if (retoursGrid != null)
            {
                await retoursGrid.Reload();
            }
            else
            {
                await SearchRetours();
            }
        }
        else
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = Localizer["Error"], Detail = result.Errors.FirstOrDefault()?.Message ?? Localizer["Unexpected_Error"] });
        }
    }

    private async Task ValidateRetour(RetourMarchandiseFournisseurBaseInfo item)
    {
        var confirmed = await DialogService.Confirm(
            string.Format(Localizer["Confirmation_Validation_Retour"], item.Number),
            Localizer["Confirmation_Validation_Titre"],
            new ConfirmOptions() { OkButtonText = Localizer["Oui"], CancelButtonText = Localizer["Non"] });

        if (confirmed != true)
        {
            return;
        }

        var result = await RetourService.ValidateRetourMarchandiseFournisseurAsync(new List<int> { item.Number }, default);
        
        if (result.IsSuccess)
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = Localizer["Success"], Detail = Localizer["Validation_Success_Retour"] });
            if (retoursGrid != null)
            {
                await retoursGrid.Reload();
            }
            else
            {
                await SearchRetours();
            }
        }
        else
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = Localizer["Error"], Detail = result.Errors.FirstOrDefault()?.Message ?? Localizer["Unexpected_Error"] });
        }
    }

    private async Task Callback(LoadDataArgs args)
    {
        _logger.LogInformation("RetourMarchandiseFournisseurList.Callback called with Skip: {Skip}, Top: {Top}", args.Skip, args.Top);
        
        if (args.Top.HasValue)
        {
            pageSize = args.Top.Value;
        }
        
        var (startDate, endDate) = PeriodFilterHelper.GetDateRangeFromPeriod(
            searchCriteria.PeriodFilter,
            searchCriteria.StartDate,
            searchCriteria.EndDate);

        _logger.LogInformation("Date range: StartDate: {StartDate}, EndDate: {EndDate}", startDate, endDate);

        try
        {
            _logger.LogInformation("Calling ODataService.QueryAsync for RetourMarchandiseFournisseurBaseInfos");
            
            if (searchCriteria.Status.HasValue)
            {
                var statusFilter = $"Statut eq {searchCriteria.Status.Value}";
                if (!string.IsNullOrEmpty(args.Filter))
                {
                    args.Filter = $"({args.Filter}) and ({statusFilter})";
                }
                else
                {
                    args.Filter = statusFilter;
                }
            }

            var response = await ODataService.QueryAsync<RetourMarchandiseFournisseurBaseInfo>(
                entitySet: "RetourMarchandiseFournisseurBaseInfos",
                args: args,
                startDate: startDate,
                endDate: endDate,
                providerId: searchCriteria.SelectedProviderId,
                tagIds: searchCriteria.SelectedTagIds,
                cancellationToken: default);

            retoursList = response.Value ?? new List<RetourMarchandiseFournisseurBaseInfo>();
            totalCount = response.ODataCount ?? retoursList.Count;

            totalGrossAmount = retoursList.Sum(r => r.GrossAmount);
            totalVatAmount = retoursList.Sum(r => r.VatAmount);
            totalNetAmount = retoursList.Sum(r => r.NetAmount);
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Error loading retours: {Message}", ex.Message);
            retoursList = new List<RetourMarchandiseFournisseurBaseInfo>();
            totalCount = 0;
            totalGrossAmount = 0;
            totalVatAmount = 0;
            totalNetAmount = 0;
            NotificationService.Notify(new NotificationMessage 
            { 
                Severity = NotificationSeverity.Error, 
                Summary = Localizer["Error"], 
                Detail = $"Erreur lors du chargement des données: {ex.Message}" 
            });
        }

        await InvokeAsync(StateHasChanged);
    }

    public class SearchCriteria
    {
        public string PeriodFilter { get; set; } = "CurrentMonth";
        public DateTime? StartDate { get; set; }
        public DateTime? EndDate { get; set; }
        public int? SelectedProviderId { get; set; }
        public List<int> SelectedTagIds { get; set; } = new();
        public int? Status { get; set; }
    }

    private void OnPeriodFilterChanged()
    {
        StateHasChanged();
    }

    private async Task OnTagIdsChanged(List<int> tagIds)
    {
        searchCriteria.SelectedTagIds = tagIds;
        await SearchRetours();
    }

    private string GetStatusStyle(int statut)
    {
        return statut == 1 
            ? "background-color: #388e3c; color: #fff;" 
            : "background-color: #e1e1e1; color: #333;";
    }
}

