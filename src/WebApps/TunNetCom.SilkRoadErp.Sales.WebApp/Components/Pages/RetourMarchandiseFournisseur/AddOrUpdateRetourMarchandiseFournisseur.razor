            if (pdfResult.IsSuccess)
            {
                var printOptions = new PrintOptions
                {
                    Mode = PrintMode.Download,
                    FileName = $"RetourFournisseur_{retourNum}.pdf",
                    DocumentType = "RetourFournisseur",
                    DocumentId = retourNum
