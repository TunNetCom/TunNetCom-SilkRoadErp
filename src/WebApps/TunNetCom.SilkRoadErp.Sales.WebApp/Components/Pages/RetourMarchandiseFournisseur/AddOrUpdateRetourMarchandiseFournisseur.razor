                {
                    Severity = NotificationSeverity.Success,
                    Summary = "Succès",
                    Detail = "Le bon de retour a été généré avec succès."
                });
            }
            else
            {
                NotificationService.Notify(new NotificationMessage
                {
                    Severity = NotificationSeverity.Error,
                    Summary = "Erreur",
                    Detail = pdfResult.Errors.FirstOrDefault()?.Message ?? "Erreur lors de la génération du PDF."
                });
            }
        }
        catch (Exception ex)
        {
            logger.LogError(ex, "Error printing retour {RetourNum}", retourNum);
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = "Erreur",
                Detail = $"Erreur lors de l'impression: {ex.Message}"
