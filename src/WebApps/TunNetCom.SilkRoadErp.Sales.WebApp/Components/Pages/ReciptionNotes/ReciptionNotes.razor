@code {
    private ReceiptNotesWithSummaryResponse receiptNotesResponse = new();
    private const int DefaultPageSize = 10;
    private QueryStringParameters queryStringParameters = new ();
    private SearchCriteria searchCriteria = new SearchCriteria();
    private List<ProviderResponse> _filteredProviders = new();
    private int? selectedProviderId;

    protected override async Task OnInitializedAsync()
    {
        await LoadProviders(new LoadDataArgs { Filter = string.Empty });

        var result  = await receiptNoteService.GetReceiptNoteWithSummaries(
            providerId: null,
            InvoiceId: null,
            IsInvoiced: null,
            queryParameters: new QueryStringParameters
            {
				PageNumber = 1,
                PageSize = DefaultPageSize
            },
            cancellationToken: default
        );

        if(result.IsSuccess)
            receiptNotesResponse = result.Value;

        await InvokeAsync(StateHasChanged);
    }

    async Task LoadProviders(LoadDataArgs args)
    {
        var parameters = new QueryStringParameters
        {
            PageNumber = 1,
            PageSize = 7,
            SearchKeyword = args?.Filter ?? string.Empty
        };

        try
        {
            var pagedProviders = await ProviderService.GetPagedAsync(parameters, default);
            _filteredProviders = pagedProviders.Items.ToList();
        }
        catch (Exception ex)
        {
            _filteredProviders = new List<ProviderResponse>();
        }

        await InvokeAsync(StateHasChanged);
    }

    private void ViewDeliveryNote(string id)
    {
        NavigationManager.NavigateTo($"/add_or_update_reciption_notes/{id}");
    }

    private async Task SearchDeliveryNotes()
    {
        var result = await receiptNoteService.GetReceiptNoteWithSummaries(
            providerId: searchCriteria.SelectedProviderId,
            InvoiceId: null,
            IsInvoiced: searchCriteria.InvoiceStatus switch
            {
                "Facturé" => true,
                "Non Facturé" => false,
                _ => null
            },
            queryParameters : queryStringParameters,
            cancellationToken: default
        );
        if (result.IsSuccess)
            receiptNotesResponse = result.Value;

        await InvokeAsync(StateHasChanged);
    }

    private async Task Callback(LoadDataArgs args)
    {
        var filter = args.Filter?.ToString();
        var sort = args.OrderBy?.ToString();
        int pageNumber = (args.Skip.Value / DefaultPageSize) + 1;
        int pageSize = DefaultPageSize;

        string sortProperty = null;
        string sortOrder = null;
        if (!string.IsNullOrEmpty(sort))
        {
            var sortParts = sort.Split(' ');
            sortProperty = sortParts[0];
            sortOrder = sortParts.Length > 1 && sortParts[1].ToLower() == "desc" ? "Descending" : "Ascending";
        }

        var result = await receiptNoteService.GetReceiptNoteWithSummaries(
                                providerId: searchCriteria.SelectedProviderId,
                                InvoiceId: null,
                                IsInvoiced: null,
                                queryParameters: new()
                                {
                                    SearchKeyword = filter,
                                    EndDate = searchCriteria.EndDate,
                                    StartDate = searchCriteria.StartDate,
                                    SortOrder = sortOrder,
                                    SortProprety = sortProperty,
                                    PageNumber = pageNumber,
                                    PageSize = pageSize,
                                },
                                cancellationToken: default
                            );

        if (result.IsSuccess)
            receiptNotesResponse = result.Value;

        await InvokeAsync(StateHasChanged);
    }

    public class SearchCriteria
    {
        public DateTime? StartDate { get; set; }
        public DateTime? EndDate { get; set; }
        public int? SelectedProviderId { get; set; }
        public string InvoiceStatus { get; set; } = "Tous";
    }
}
