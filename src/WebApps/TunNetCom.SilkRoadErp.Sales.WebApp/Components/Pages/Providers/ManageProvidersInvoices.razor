    private async Task LoadRetenueStatus()
    {
        _retenueMap.Clear();
        if (_invoicesWithReceiptNotes == null || !_invoicesWithReceiptNotes.Any())
        {
            return;
        }

        foreach (var invoiceWithBRs in _invoicesWithReceiptNotes)
        {
            try
            {
                var retenueResult = await retenueSourceFournisseurApiClient.GetRetenueSourceFournisseurAsync(invoiceWithBRs.Invoice.Num, _cancellationTokenSource.Token);
                // Only set to true if the result is successful AND has a value (not null)
                // If IsSuccess = false, it means either 404 (not found) or another error
                // If IsSuccess = true but Value is null, it means the API returned 200 OK but with null data
                _retenueMap[invoiceWithBRs.Invoice.Num] = retenueResult.IsSuccess && retenueResult.Value != null;
            }
            catch
            {
                // On any exception, assume no retenue exists
                _retenueMap[invoiceWithBRs.Invoice.Num] = false;
            }
        }
    }

    private async Task OpenRetenueDialog(int numFactureFournisseur, decimal montantTTC)
