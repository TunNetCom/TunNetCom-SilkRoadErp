    private async Task ValidateCurrentDeliveryNote()
    {
        if (string.IsNullOrEmpty(deliveryNoteNumber) || deliveryNoteNumber == "0")
        {
            NotificationService.Notify(new NotificationMessage 
            { 
                Severity = NotificationSeverity.Warning, 
                Summary = Localizer["Attention"], 
                Detail = Localizer["Cannot_Validate_New_Document"] 
            });
            return;
        }

        if (isReadOnly)
        {
            NotificationService.Notify(new NotificationMessage 
            { 
                Severity = NotificationSeverity.Info, 
                Summary = Localizer["Information"], 
                Detail = Localizer["Document_Already_Validated"] 
            });
            return;
        }

        var confirmed = await DialogService.Confirm(
            string.Format(Localizer["Confirmation_Validation_DeliveryNote"], deliveryNoteNumber),
            Localizer["Confirmation_Validation_Titre"],
            new ConfirmOptions() { OkButtonText = Localizer["Oui"], CancelButtonText = Localizer["Non"] });

        if (confirmed != true)
        {
            return;
        }

        if (!int.TryParse(deliveryNoteNumber, out var numAsInt))
        {
            NotificationService.Notify(new NotificationMessage 
            { 
                Severity = NotificationSeverity.Error, 
                Summary = Localizer["Error"], 
                Detail = Localizer["Invalid_Document_Number"] 
            });
            return;
        }

        var result = await deliveryNoteApiClient.ValidateDeliveryNotesAsync(new List<int> { numAsInt }, default);

        if (result.IsSuccess)
        {
            NotificationService.Notify(new NotificationMessage 
            { 
                Severity = NotificationSeverity.Success, 
                Summary = Localizer["Success"], 
                Detail = Localizer["Validation_Success_DeliveryNote"] 
            });
            
            // Recharger le document pour mettre à jour le statut
            await FetchDeliveryNote();
        }
        else
        {
            NotificationService.Notify(new NotificationMessage 
            { 
                Severity = NotificationSeverity.Error, 
                Summary = Localizer["Error"], 
                Detail = result.Errors.FirstOrDefault()?.Message ?? Localizer["Unexpected_Error"] 
            });
        }
    }

    void OnDrag(System.Drawing.Point point)
    {
        JSRuntime.InvokeVoidAsync("eval", $"console.log('Dialog drag. Left:{point.X}, Top:{point.Y}')");

        if (Settings == null)
        {
            Settings = new DialogSettings();
        }

        Settings.Left = $"{point.X}px";
        Settings.Top = $"{point.Y}px";

        InvokeAsync(SaveStateAsync);
    }

    void OnResize(System.Drawing.Size size)
    {
        JSRuntime.InvokeVoidAsync("eval", $"console.log('Dialog resize. Width:{size.Width}, Height:{size.Height}')");

        if (Settings == null)
        {
            Settings = new DialogSettings();
        }

        Settings.Width = $"{size.Width}px";
        Settings.Height = $"{size.Height}px";

        InvokeAsync(SaveStateAsync);
    }

    DialogSettings _settings;
    public DialogSettings Settings
    {
        get
        {
            return _settings;
        }
        set
        {
            if (_settings != value)
            {
                _settings = value;
                InvokeAsync(SaveStateAsync);
            }
        }
    }

    private async Task LoadStateAsync()
    {
        await Task.CompletedTask;

        var result = await JSRuntime.InvokeAsync<string>("window.localStorage.getItem", "DialogSettings");
        if (!string.IsNullOrEmpty(result))
        {
            _settings = JsonSerializer.Deserialize<DialogSettings>(result);
        }
    }

    private async Task SaveStateAsync()
    {
        await Task.CompletedTask;

        await JSRuntime.InvokeVoidAsync("window.localStorage.setItem", "DialogSettings", JsonSerializer.Serialize<DialogSettings>(Settings));
    }

