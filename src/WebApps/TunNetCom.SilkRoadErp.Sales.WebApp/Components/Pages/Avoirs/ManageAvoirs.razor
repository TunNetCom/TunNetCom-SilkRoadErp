@page "/manage-avoirs"
@using Microsoft.Extensions.Localization
@using TunNetCom.SilkRoadErp.Sales.WebApp.Locales
@using Radzen.Blazor
@inject IStringLocalizer<SharedResource> Localizer
@inject NavigationManager NavigationManager

<RadzenCard>
    <RadzenStack Orientation="Radzen.Orientation.Vertical" Gap="1rem">
        <RadzenText TextStyle="TextStyle.H3">Gérer les avoirs</RadzenText>
        <RadzenText TextStyle="TextStyle.Body1">
            Créer et modifier les avoirs client.
        </RadzenText>
        <RadzenButton Text="Ajouter avoir" 
                      Icon="add" 
                      ButtonStyle="ButtonStyle.Primary" 
                      Click="@(() => NavigationManager.NavigateTo("/AddOrUpdateAvoir"))"
                      Size="ButtonSize.Large" />
    </RadzenStack>
</RadzenCard>

