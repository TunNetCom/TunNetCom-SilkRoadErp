@code {
    private RadzenDataGrid<AvoirBaseInfo> avoirsGrid = default!;
    private List<AvoirBaseInfo> avoirsList = new();
    private IList<AvoirBaseInfo> selectedAvoirs = new List<AvoirBaseInfo>();
    private int totalCount = 0;
    private decimal totalNetAmount = 0;
    private decimal totalVatAmount = 0;
    private decimal totalIncludingTaxAmount = 0;
    private int pageSize = GridPageSizeConstants.PageSize10;
    private SearchCriteria searchCriteria = new SearchCriteria();
    private List<CustomerResponse> _filteredCustomers = new();

    protected override async Task OnInitializedAsync()
    {
        _logger.LogInformation("AvoirsList.OnInitializedAsync called");
        
        await LoadCustomers(new LoadDataArgs { Filter = string.Empty });

        // Set default period to CurrentMonth and calculate dates
        searchCriteria.PeriodFilter = "CurrentMonth";
        var (startDate, endDate) = PeriodFilterHelper.GetDateRangeFromPeriod(
            searchCriteria.PeriodFilter,
            searchCriteria.StartDate,
            searchCriteria.EndDate);
        searchCriteria.StartDate = startDate;
        searchCriteria.EndDate = endDate;

        // Load initial data
        _logger.LogInformation("Calling Callback to load initial data");
        await Callback(new LoadDataArgs { Skip = 0, Top = pageSize });
    }

    async Task LoadCustomers(LoadDataArgs args)
    {
        var parameters = new QueryStringParameters
        {
            PageNumber = 1,
            PageSize = 7,
            SearchKeyword = args?.Filter ?? string.Empty
        };

        try
        {
            var pagedCustomers = await CustomersService.SearchCustomers(parameters, default);
            _filteredCustomers = pagedCustomers.Items.ToList();
        }
        catch (Exception ex)
        {
            _filteredCustomers = new List<CustomerResponse>();
        }

        await InvokeAsync(StateHasChanged);
    }

    private void OnPeriodFilterChanged()
    {
        StateHasChanged();
    }

    private async Task SearchAvoirs()
    {
        // Trigger a refresh by calling Callback with current args
        await Callback(new LoadDataArgs { Skip = 0, Top = pageSize });
    }

    private async Task ValidateSelectedAvoirs()
    {
        if (selectedAvoirs == null || !selectedAvoirs.Any())
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Warning, Summary = Localizer["Attention"], Detail = Localizer["Select_At_Least_One_Avoir"] });
            return;
        }

        var count = selectedAvoirs.Count;
        var confirmed = await DialogService.Confirm(
            string.Format(Localizer["Confirmation_Validation_Avoirs"], count, count > 1 ? "s" : ""),
            Localizer["Confirmation_Validation_Titre"],
            new ConfirmOptions() { OkButtonText = Localizer["Oui"], CancelButtonText = Localizer["Non"] });

        if (confirmed != true)
        {
            return;
        }

        var ids = selectedAvoirs.Select(d => d.Num).ToList();
        var result = await AvoirsService.ValidateAvoirsAsync(ids, default);
        
        if (result.IsSuccess)
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = Localizer["Success"], Detail = Localizer["Validation_Success_Avoirs"] });
            selectedAvoirs.Clear();
            if (avoirsGrid != null)
            {
                await avoirsGrid.Reload();
            }
            else
            {
                await SearchAvoirs();
            }
        }
        else
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = Localizer["Error"], Detail = result.Errors.FirstOrDefault()?.Message ?? Localizer["Unexpected_Error"] });
        }
    }

    private async Task ValidateAvoir(AvoirBaseInfo item)
    {
        var confirmed = await DialogService.Confirm(
            string.Format(Localizer["Confirmation_Validation_Avoir"], item.Num),
            Localizer["Confirmation_Validation_Titre"],
            new ConfirmOptions() { OkButtonText = Localizer["Oui"], CancelButtonText = Localizer["Non"] });

        if (confirmed != true)
        {
            return;
        }

        var result = await AvoirsService.ValidateAvoirsAsync(new List<int> { item.Num }, default);
        
        if (result.IsSuccess)
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = Localizer["Success"], Detail = Localizer["Validation_Success_Avoir"] });
            if (avoirsGrid != null)
            {
                await avoirsGrid.Reload();
            }
            else
            {
                await SearchAvoirs();
            }
        }
        else
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = Localizer["Error"], Detail = result.Errors.FirstOrDefault()?.Message ?? Localizer["Unexpected_Error"] });
        }
    }

    private async Task Callback(LoadDataArgs args)
    {
        _logger.LogInformation("AvoirsList.Callback called with Skip: {Skip}, Top: {Top}", args.Skip, args.Top);
        
        // Update pageSize if Top is provided
        if (args.Top.HasValue)
        {
            pageSize = args.Top.Value;
        }
        
        var (startDate, endDate) = PeriodFilterHelper.GetDateRangeFromPeriod(
            searchCriteria.PeriodFilter,
            searchCriteria.StartDate,
            searchCriteria.EndDate);

        _logger.LogInformation("Date range: StartDate: {StartDate}, EndDate: {EndDate}", startDate, endDate);

        try
        {
            var pageNumber = (args.Skip ?? 0) / pageSize + 1;
            var queryParams = new GetAvoirsQueryParams
            {
                PageNumber = pageNumber,
                PageSize = pageSize,
                ClientId = searchCriteria.SelectedClientId,
                StartDate = startDate,
                EndDate = endDate,
                SearchKeyword = args.Filter,
                SortOrder = args.Sorts?.FirstOrDefault()?.SortOrder == SortOrder.Ascending ? "asc" : "desc",
                SortProperty = args.Sorts?.FirstOrDefault()?.Property
            };

            var response = await AvoirsService.GetAvoirsWithSummariesAsync(
                queryParams.ClientId,
                queryParams.SortOrder,
                queryParams.SortProperty,
                queryParams.PageNumber ?? 1,
                queryParams.PageSize ?? 10,
                queryParams.SearchKeyword,
                queryParams.StartDate,
                queryParams.EndDate,
                default,
                status: searchCriteria.Status);

            avoirsList = response.Avoirs.Items.ToList();
            totalCount = response.Avoirs.TotalCount;
            totalNetAmount = response.TotalNetAmount;
            totalVatAmount = response.TotalVatAmount;
            totalIncludingTaxAmount = response.TotalIncludingTaxAmount;
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Error loading avoirs: {Message}", ex.Message);
            avoirsList = new List<AvoirBaseInfo>();
            totalCount = 0;
            totalNetAmount = 0;
            totalVatAmount = 0;
            totalIncludingTaxAmount = 0;
        }

        await InvokeAsync(StateHasChanged);
    }

    public class SearchCriteria
    {
        public string PeriodFilter { get; set; } = "CurrentMonth";
        public DateTime? StartDate { get; set; }
        public DateTime? EndDate { get; set; }
        public int? SelectedClientId { get; set; }
        public int? Status { get; set; }
    }

    private void EditAvoir(int num)
    {
        NavigationManager.NavigateTo($"/AddOrUpdateAvoir/{num}");
    }

    private string GetStatusStyle(int statut)
    {
        return statut == 1 
            ? "background-color: #388e3c; color: #fff;" 
            : "background-color: #e1e1e1; color: #333;";
    }
}

