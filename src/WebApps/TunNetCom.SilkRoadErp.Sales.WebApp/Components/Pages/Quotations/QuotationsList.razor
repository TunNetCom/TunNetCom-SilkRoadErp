@code {
    private List<QuotationResponse> quotationsList = new();
    private int totalCount = 0;
    private decimal totalNetAmount = 0;
    private decimal totalVatAmount = 0;
    private const int DefaultPageSize = 15;
    private SearchCriteria searchCriteria = new SearchCriteria();
    private List<CustomerResponse> _filteredCustomers = new();

    protected override async Task OnInitializedAsync()
    {
        _logger.LogInformation("QuotationsList.OnInitializedAsync called");
        
        await LoadCustomers(new LoadDataArgs { Filter = string.Empty });

        // Set default period to CurrentMonth and calculate dates
        searchCriteria.PeriodFilter = "CurrentMonth";
        var (startDate, endDate) = PeriodFilterHelper.GetDateRangeFromPeriod(
            searchCriteria.PeriodFilter, 
            searchCriteria.StartDate, 
            searchCriteria.EndDate);
        searchCriteria.StartDate = startDate;
        searchCriteria.EndDate = endDate;

        // Load initial data
        _logger.LogInformation("Calling Callback to load initial data");
        await Callback(new LoadDataArgs { Skip = 0, Top = DefaultPageSize });
    }

    async Task LoadCustomers(LoadDataArgs args)
    {
        var parameters = new QueryStringParameters
        {
            PageNumber = 1,
            PageSize = 7,
            SearchKeyword = args?.Filter ?? string.Empty
        };

        try
        {
            var pagedCustomers = await CustomersService.SearchCustomers(parameters, default);
            _filteredCustomers = pagedCustomers.Items.ToList();
        }
        catch (Exception ex)
        {
            _filteredCustomers = new List<CustomerResponse>();
        }

        await InvokeAsync(StateHasChanged);
    }

    private void ViewQuotation(string id)
    {
        NavigationManager.NavigateTo($"/AddOrUpdateQuotation/{id}");
    }

    private void CreateNewQuotation()
    {
        NavigationManager.NavigateTo("/AddOrUpdateQuotation");
    }

    private async Task SearchQuotations()
    {
        await Callback(new LoadDataArgs { Skip = 0, Top = DefaultPageSize });
    }

    private async Task OnPeriodFilterChanged()
    {
        var (startDate, endDate) = PeriodFilterHelper.GetDateRangeFromPeriod(
            searchCriteria.PeriodFilter,
            searchCriteria.StartDate,
            searchCriteria.EndDate);
        searchCriteria.StartDate = startDate;
        searchCriteria.EndDate = endDate;

        await InvokeAsync(StateHasChanged);
    }

    private async Task Callback(LoadDataArgs args)
    {
        _logger.LogInformation("QuotationsList.Callback called with Skip: {Skip}, Top: {Top}", args.Skip, args.Top);
        
        var (startDate, endDate) = PeriodFilterHelper.GetDateRangeFromPeriod(
            searchCriteria.PeriodFilter,
            searchCriteria.StartDate,
            searchCriteria.EndDate);

        _logger.LogInformation("Date range: StartDate: {StartDate}, EndDate: {EndDate}", startDate, endDate);

        try
        {
            var pageNumber = (args.Skip ?? 0) / DefaultPageSize + 1;
            var pageSize = args.Top ?? DefaultPageSize;

            var parameters = new QueryStringParameters
            {
                PageNumber = pageNumber,
                PageSize = pageSize,
                SearchKeyword = args.Filter
            };

            var pagedQuotations = await QuotationService.GetQuotationsAsync(parameters, default);

            // Filter by date range and customer
            var filtered = pagedQuotations.Items.AsQueryable();

            if (startDate.HasValue)
            {
                filtered = filtered.Where(q => q.Date >= startDate.Value);
            }

            if (endDate.HasValue)
            {
                filtered = filtered.Where(q => q.Date <= endDate.Value);
            }

            if (searchCriteria.SelectedCustomerId.HasValue)
            {
                filtered = filtered.Where(q => q.IdClient == searchCriteria.SelectedCustomerId.Value);
            }

            quotationsList = filtered.ToList();
            totalCount = quotationsList.Count;

            // Calculate totals
            totalNetAmount = quotationsList.Sum(q => q.TotHTva);
            totalVatAmount = quotationsList.Sum(q => q.TotTva);
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Error loading quotations");
            quotationsList = new List<QuotationResponse>();
            totalCount = 0;
            totalNetAmount = 0;
            totalVatAmount = 0;
        }

        await InvokeAsync(StateHasChanged);
    }

    private class SearchCriteria
    {
        public string PeriodFilter { get; set; } = "CurrentMonth";
        public DateTime? StartDate { get; set; }
        public DateTime? EndDate { get; set; }
        public int? SelectedCustomerId { get; set; }
    }
}

