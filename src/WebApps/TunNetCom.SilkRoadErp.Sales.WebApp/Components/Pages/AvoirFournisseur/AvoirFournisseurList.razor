@code {
    private RadzenDataGrid<AvoirFournisseurBaseInfo> avoirsFournisseurGrid = default!;
    private List<AvoirFournisseurBaseInfo> avoirsFournisseurList = new();
    private IList<AvoirFournisseurBaseInfo> selectedAvoirsFournisseur = new List<AvoirFournisseurBaseInfo>();
    private int totalCount = 0;
    private decimal totalNetAmount = 0;
    private decimal totalVatAmount = 0;
    private decimal totalIncludingTaxAmount = 0;
    private int pageSize = GridPageSizeConstants.PageSize10;
    private SearchCriteria searchCriteria = new SearchCriteria();
    private List<ProviderResponse> _filteredProviders = new();

    protected override async Task OnInitializedAsync()
    {
        _logger.LogInformation("AvoirFournisseurList.OnInitializedAsync called");
        
        await LoadProviders(new LoadDataArgs { Filter = string.Empty });

        // Set default period to CurrentMonth and calculate dates
        searchCriteria.PeriodFilter = "CurrentMonth";
        var (startDate, endDate) = PeriodFilterHelper.GetDateRangeFromPeriod(
            searchCriteria.PeriodFilter,
            searchCriteria.StartDate,
            searchCriteria.EndDate);
        searchCriteria.StartDate = startDate;
        searchCriteria.EndDate = endDate;

        // Load initial data
        _logger.LogInformation("Calling Callback to load initial data");
        await Callback(new LoadDataArgs { Skip = 0, Top = pageSize });
    }

    async Task LoadProviders(LoadDataArgs args)
    {
        var parameters = new QueryStringParameters
        {
            PageNumber = 1,
            PageSize = 7,
            SearchKeyword = args?.Filter ?? string.Empty
        };

        try
        {
            var pagedProviders = await ProvidersService.GetPagedAsync(parameters, default);
            _filteredProviders = pagedProviders.Items.ToList();
        }
        catch (Exception ex)
        {
            _filteredProviders = new List<ProviderResponse>();
        }

        await InvokeAsync(StateHasChanged);
    }

    private void OnPeriodFilterChanged()
    {
        StateHasChanged();
    }

    private async Task SearchAvoirsFournisseur()
    {
        // Trigger a refresh by calling Callback with current args
        await Callback(new LoadDataArgs { Skip = 0, Top = pageSize });
    }

    private async Task ValidateSelectedAvoirsFournisseur()
    {
        if (selectedAvoirsFournisseur == null || !selectedAvoirsFournisseur.Any())
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Warning, Summary = Localizer["Attention"], Detail = Localizer["Select_At_Least_One_AvoirFournisseur"] });
            return;
        }

        var count = selectedAvoirsFournisseur.Count;
        var confirmed = await DialogService.Confirm(
            string.Format(Localizer["Confirmation_Validation_AvoirsFournisseur"], count, count > 1 ? "s" : ""),
            Localizer["Confirmation_Validation_Titre"],
            new ConfirmOptions() { OkButtonText = Localizer["Oui"], CancelButtonText = Localizer["Non"] });

        if (confirmed != true)
        {
            return;
        }

        var ids = selectedAvoirsFournisseur.Select(d => d.Id).ToList();
        var result = await AvoirFournisseurService.ValidateAvoirFournisseursAsync(ids, default);
        
        if (result.IsSuccess)
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = Localizer["Success"], Detail = Localizer["Validation_Success_AvoirsFournisseur"] });
            selectedAvoirsFournisseur.Clear();
            if (avoirsFournisseurGrid != null)
            {
                await avoirsFournisseurGrid.Reload();
            }
            else
            {
                await SearchAvoirsFournisseur();
            }
        }
        else
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = Localizer["Error"], Detail = result.Errors.FirstOrDefault()?.Message ?? Localizer["Unexpected_Error"] });
        }
    }

    private async Task ValidateAvoirFournisseur(AvoirFournisseurBaseInfo item)
    {
        var confirmed = await DialogService.Confirm(
            string.Format(Localizer["Confirmation_Validation_AvoirFournisseur"], item.NumAvoirChezFournisseur),
            Localizer["Confirmation_Validation_Titre"],
            new ConfirmOptions() { OkButtonText = Localizer["Oui"], CancelButtonText = Localizer["Non"] });

        if (confirmed != true)
        {
            return;
        }

        var result = await AvoirFournisseurService.ValidateAvoirFournisseursAsync(new List<int> { item.Id }, default);
        
        if (result.IsSuccess)
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = Localizer["Success"], Detail = Localizer["Validation_Success_AvoirFournisseur"] });
            if (avoirsFournisseurGrid != null)
            {
                await avoirsFournisseurGrid.Reload();
            }
            else
            {
                await SearchAvoirsFournisseur();
            }
        }
        else
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = Localizer["Error"], Detail = result.Errors.FirstOrDefault()?.Message ?? Localizer["Unexpected_Error"] });
        }
    }

    private async Task Callback(LoadDataArgs args)
    {
        _logger.LogInformation("AvoirFournisseurList.Callback called with Skip: {Skip}, Top: {Top}", args.Skip, args.Top);
        
        // Update pageSize if Top is provided
        if (args.Top.HasValue)
        {
            pageSize = args.Top.Value;
        }
        
        var (startDate, endDate) = PeriodFilterHelper.GetDateRangeFromPeriod(
            searchCriteria.PeriodFilter,
            searchCriteria.StartDate,
            searchCriteria.EndDate);

        _logger.LogInformation("Date range: StartDate: {StartDate}, EndDate: {EndDate}", startDate, endDate);

        try
        {
            var pageNumber = (args.Skip ?? 0) / pageSize + 1;
            var (sortOrder, sortProperty) = args.Sorts != null && args.Sorts.Any()
                ? (args.Sorts.First().SortOrder == SortOrder.Ascending ? SortConstants.Ascending : SortConstants.Descending, args.Sorts.First().Property)
                : (SortConstants.Ascending, nameof(AvoirFournisseurBaseInfo.NumAvoirChezFournisseur));
            var queryParams = new GetAvoirFournisseurQueryParams
            {
                PageNumber = pageNumber,
                PageSize = pageSize,
                FournisseurId = searchCriteria.SelectedFournisseurId,
                StartDate = startDate,
                EndDate = endDate,
                SearchKeyword = args.Filter,
                SortOrder = sortOrder,
                SortProperty = sortProperty
            };

            var response = await AvoirFournisseurService.GetAvoirFournisseurWithSummariesAsync(
                queryParams.FournisseurId,
                queryParams.NumFactureAvoirFournisseur,
                queryParams.SortOrder,
                queryParams.SortProperty,
                queryParams.PageNumber ?? 1,
                queryParams.PageSize ?? 10,
                queryParams.SearchKeyword,
                queryParams.StartDate,
                queryParams.EndDate,
                default,
                status: searchCriteria.Status);

            avoirsFournisseurList = response.AvoirFournisseurs.Items.ToList();
            totalCount = response.AvoirFournisseurs.TotalCount;
            totalNetAmount = response.TotalNetAmount;
            totalVatAmount = response.TotalVatAmount;
            totalIncludingTaxAmount = response.TotalIncludingTaxAmount;
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Error loading avoirs fournisseur: {Message}", ex.Message);
            avoirsFournisseurList = new List<AvoirFournisseurBaseInfo>();
            totalCount = 0;
            totalNetAmount = 0;
            totalVatAmount = 0;
            totalIncludingTaxAmount = 0;
        }

        await InvokeAsync(StateHasChanged);
    }

    public class SearchCriteria
    {
        public string PeriodFilter { get; set; } = "CurrentMonth";
        public DateTime? StartDate { get; set; }
        public DateTime? EndDate { get; set; }
        public int? SelectedFournisseurId { get; set; }
        public int? Status { get; set; }
    }

    private void EditAvoirFournisseur(int id)
    {
        NavigationManager.NavigateTo($"/AddOrUpdateAvoirFournisseur/{id}");
    }

    private string GetStatusStyle(int statut)
    {
        return statut == 1 
            ? "background-color: #388e3c; color: #fff;" 
            : "background-color: #e1e1e1; color: #333;";
    }
}

