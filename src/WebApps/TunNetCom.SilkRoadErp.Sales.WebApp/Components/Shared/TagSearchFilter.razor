@using TunNetCom.SilkRoadErp.Sales.Contracts.Tags
@using TunNetCom.SilkRoadErp.Sales.HttpClients.Services.Tags
@using Radzen.Blazor
@using Radzen
@using Microsoft.Extensions.Localization
@using TunNetCom.SilkRoadErp.Sales.WebApp.Locales
@inject ITagsApiClient TagsService
@inject IStringLocalizer<SharedResource> Localizer

<div class="tag-search-filter">
    <div class="search-field">
        <label for="tag-search">Tags</label>
        <RadzenDropDown @bind-Value="@selectedTagIds"
                       Data="@AvailableTags"
                       AllowFiltering="true"
                       FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                       Multiple="true"
                       Placeholder="Rechercher des tags..."
                       TextProperty="@nameof(TagResponse.Name)"
                       ValueProperty="@nameof(TagResponse.Id)"
                       Change="@OnTagsChanged"
                       class="tag-dropdown">
            <Template Context="tag">
                <span class="tag-dropdown-item" style="@GetTagStyle(tag.Color)">
                    @tag.Name
                </span>
            </Template>
            <ValueTemplate Context="tagIds">
                @{
                    var ids = tagIds as IEnumerable<int>;
                    if (ids != null && ids.Any())
                    {
                        var count = ids.Count();
                        <span>@count tag@(count > 1 ? "s" : "") sélectionné@(count > 1 ? "s" : "")</span>
                    }
                    else
                    {
                        <span>Rechercher des tags...</span>
                    }
                }
            </ValueTemplate>
        </RadzenDropDown>
    </div>
</div>

<style>
    .tag-search-filter {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .search-field {
        display: flex;
        flex-direction: column;
    }

    .search-field label {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-size: 13px;
        font-weight: 500;
        margin-bottom: 6px;
    }

    .tag-dropdown {
        width: 100% !important;
    }

    .tag-dropdown-item {
        font-size: 0.75rem;
        padding: 0.125rem 0.5rem;
        border-radius: 3px;
        display: inline-block;
        line-height: 1.5;
    }
</style>

@code {
    [Parameter] public List<int> SelectedTagIds { get; set; } = new();
    [Parameter] public EventCallback<List<int>> SelectedTagIdsChanged { get; set; }

    private List<TagResponse> AvailableTags { get; set; } = new();
    private IEnumerable<int>? selectedTagIds;

    protected override async Task OnInitializedAsync()
    {
        await LoadAvailableTags();
        UpdateSelectedTagIdsFromParameter();
    }

    protected override async Task OnParametersSetAsync()
    {
        UpdateSelectedTagIdsFromParameter();
    }

    private void UpdateSelectedTagIdsFromParameter()
    {
        if (SelectedTagIds != null && SelectedTagIds.Any())
        {
            selectedTagIds = SelectedTagIds.ToList();
        }
        else
        {
            selectedTagIds = new List<int>();
        }
    }

    private async Task LoadAvailableTags()
    {
        try
        {
            AvailableTags = await TagsService.GetAllTagsAsync();
        }
        catch (Exception)
        {
            AvailableTags = new List<TagResponse>();
        }
    }

    private async Task OnTagsChanged(object? value)
    {
        if (value is IEnumerable<int> tagIds)
        {
            SelectedTagIds = tagIds.ToList();
            await SelectedTagIdsChanged.InvokeAsync(SelectedTagIds);
        }
        else if (value == null)
        {
            SelectedTagIds = new List<int>();
            await SelectedTagIdsChanged.InvokeAsync(SelectedTagIds);
        }
    }

    private string GetTagStyle(string? color)
    {
        if (string.IsNullOrEmpty(color))
        {
            return "background-color: #e1e1e1; color: #333;";
        }

        var bgColor = color.ToLower() switch
        {
            "red" or "#ff0000" => "#d32f2f",
            "green" or "#00ff00" => "#388e3c",
            "blue" or "#0000ff" => "#1976d2",
            "yellow" or "#ffff00" => "#f57c00",
            "orange" or "#ffa500" => "#f57c00",
            "purple" or "#800080" => "#7b1fa2",
            _ => "#e1e1e1"
        };

        var textColor = color.ToLower() switch
        {
            "red" or "#ff0000" => "#fff",
            "green" or "#00ff00" => "#fff",
            "blue" or "#0000ff" => "#fff",
            "yellow" or "#ffff00" => "#fff",
            "orange" or "#ffa500" => "#fff",
            "purple" or "#800080" => "#fff",
            _ => "#333"
        };

        return $"background-color: {bgColor}; color: {textColor};";
    }
}

