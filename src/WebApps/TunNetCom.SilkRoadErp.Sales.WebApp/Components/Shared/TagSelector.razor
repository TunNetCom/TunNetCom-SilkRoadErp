@using TunNetCom.SilkRoadErp.Sales.Contracts.Tags
@using TunNetCom.SilkRoadErp.Sales.HttpClients.Services.Tags
@using Radzen.Blazor
@using Radzen
@using Microsoft.Extensions.Localization
@using TunNetCom.SilkRoadErp.Sales.WebApp.Locales
@using Microsoft.AspNetCore.Components.Web
@inject ITagsApiClient TagsService
@inject ToastService ToastService
@inject Radzen.NotificationService NotificationService
@inject IStringLocalizer<SharedResource> Localizer

<div class="tag-selector">
    <div class="selected-tags">
        @if (_localSelectedTags != null && _localSelectedTags.Any())
        {
            @foreach (var tag in _localSelectedTags)
            {
                <span class="tag-badge-selector" style="@GetTagStyle(tag.Color)">
                    @tag.Name
                    @if (!IsReadOnly)
                    {
                        <span class="tag-remove-icon" @onclick="@(() => RemoveTag(tag))" @onclick:stopPropagation="true">
                            <RadzenIcon Icon="close" />
                        </span>
                    }
                </span>
            }
        }
        @if (!IsReadOnly)
        {
            <div class="tag-input-container">
                <RadzenTextBox @bind-Value="@newTagName"
                              Change="@OnTagInputChanged"
                              @onkeypress="@OnTagInputKeyPress"
                              @onblur="@OnTagInputBlur"
                              Placeholder="+ Ajouter un tag..."
                              class="tag-input"
                              Variant="Variant.Flat" />
            </div>
        }
    </div>
    
    @if (AvailableTags.Any() && showSuggestions)
    {
        <div class="tag-suggestions">
            @foreach (var suggestion in filteredSuggestions)
            {
                <div class="tag-suggestion-item" @onclick="@(() => SelectSuggestion(suggestion))">
                    @suggestion.Name
                </div>
            }
        </div>
    }
</div>

