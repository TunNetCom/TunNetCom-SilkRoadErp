@using TunNetCom.SilkRoadErp.Sales.WebApp.Helpers
@using TunNetCom.SilkRoadErp.Sales.Contracts.Common
@using TunNetCom.SilkRoadErp.Sales.WebApp.PrintEngine.Reports.RetourMarchandiseFournisseur

@code {
    [Parameter] public PrintRetourFournisseurModel Model { get; set; } = null!;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            font-size: 12px;
            margin: 0;
            padding: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #000;
            padding: 5px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .text-left {
            text-align: left;
        }

        .text-right {
            text-align: right;
        }

        .text-bold {
            font-weight: bold;
        }

        .footer-container {
            display: flex;
            margin-top: 20px;
            justify-content: space-between;
        }

        .totals {
            width: 50%;
            margin-left: auto;
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
        }

        .footer {
            margin-top: 10px;
            text-align: center;
            font-style: italic;
            font-size: 11px;
        }

        .status-badge {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 4px;
            font-weight: bold;
            font-size: 10px;
        }

        @@media print {
            .footer-container {
                page-break-inside: avoid;
                break-inside: avoid;
            }
        }
    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Code</th>
                <th class="text-left">Désignation</th>
                <th>Qté Retournée</th>
                <th>P.H.T</th>
                <th>Rem %</th>
                <th>TOT H.T</th>
                <th>TVA</th>
                <th>TOT TTC</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Lines)
            {
                <tr>
                    <td>@line.RefProduit</td>
                    <td class="text-left">@line.DesignationLi</td>
                    <td>@line.QteLi</td>
                    <td class="text-right">@line.PrixHt.ToString(DecimalFormatConstants.FORMAT_N3, System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</td>
                    <td class="text-right">@line.Remise.ToString(DecimalFormatConstants.FORMAT_N2, System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</td>
                    <td class="text-right">@line.TotHt.ToString(DecimalFormatConstants.FORMAT_N3, System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</td>
                    <td class="text-right">@line.Tva.ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))%</td>
                    <td class="text-right">@line.TotTtc.ToString(DecimalFormatConstants.FORMAT_N3, System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="footer-container" style="display: flex; justify-content: space-between; align-items: flex-start; gap: 30px; margin-top: 20px;">
        <!-- TVA Bases Section -->
        <div class="tva-bases" style="flex: 1; min-width: 0;">
            <table style="width: 100%; border-collapse: collapse;">
                <tr>
                    <th style="text-align: left; padding: 5px; border-bottom: 1px solid #ddd;">tx TVA</th>
                    <th style="text-align: right; padding: 5px; border-bottom: 1px solid #ddd;">@Model.VatRate19.ToString("N0")%</th>
                    <th style="text-align: right; padding: 5px; border-bottom: 1px solid #ddd;">@Model.VatRate13.ToString("N0")%</th>
                    <th style="text-align: right; padding: 5px; border-bottom: 1px solid #ddd;">@Model.VatRate7.ToString("N0")%</th>
                    <th style="text-align: right; padding: 5px; border-bottom: 1px solid #ddd;">Total</th>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px;">Base</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Base19.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Base13.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Base7.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.TotalExcludingTax.FormatAmount()</td>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px;">Mt TVA</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Tva19.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Tva13.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Tva7.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.TotalVat.FormatAmount()</td>
                </tr>
            </table>
        </div>

        <!-- Totals Section -->
        <div class="totals" style="flex: 0 0 auto;">
            <table style="border-collapse: collapse; width: 100%;">
                <tr>
                    <td style="text-align: left; padding: 5px; border-bottom: 1px solid #eee;">Total HT:</td>
                    <td style="text-align: right; padding: 5px; border-bottom: 1px solid #eee; font-family: monospace;">@Model.TotalExcludingTax.FormatAmount()</td>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px; border-bottom: 1px solid #eee;">Total TVA:</td>
                    <td style="text-align: right; padding: 5px; border-bottom: 1px solid #eee; font-family: monospace;">@Model.TotalVat.FormatAmount()</td>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px; font-weight: bold;">Total TTC:</td>
                    <td style="text-align: right; padding: 5px; font-weight: bold; background-color: #f5f5f5; font-family: monospace;">@Model.TotalTTC.FormatAmount()</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="footer">
        @AmountHelper.ConvertFloatToFrenchToWords(Model.TotalTTC, AmountHelper.TYPE_BL)
    </div>
</body>
</html>
