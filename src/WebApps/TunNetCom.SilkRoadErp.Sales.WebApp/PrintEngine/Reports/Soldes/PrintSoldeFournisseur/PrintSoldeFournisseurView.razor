@using TunNetCom.SilkRoadErp.Sales.WebApp.Helpers
@using TunNetCom.SilkRoadErp.Sales.WebApp.PrintEngine.Reports.Soldes.PrintSoldeFournisseur

@code{
    [Parameter] public PrintSoldeFournisseurModel Model { get; set; } = null!;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 11px;
            margin: 20px;
            color: #222;
        }

        .section-title {
            font-size: 14px;
            font-weight: bold;
            margin-top: 24px;
            border-bottom: 2px solid #444;
            padding-bottom: 4px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 8px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 6px 8px;
            text-align: left;
        }

        th {
            background-color: #f5f5f5;
            font-size: 11px;
        }

        .text-right {
            text-align: right;
        }

        .summary-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 8px;
            margin-top: 12px;
        }

        .summary-card {
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 8px;
            background-color: #fafafa;
        }

        .summary-card .label {
            font-size: 10px;
            color: #555;
        }

        .summary-card .value {
            font-weight: bold;
            font-size: 13px;
        }

        .footer {
            margin-top: 32px;
            font-size: 10px;
            text-align: right;
        }
    </style>
</head>
<body>
    <h2>Rapport solde fournisseur</h2>
    <div>Généré le @Model.GeneratedAt.ToString("dd/MM/yyyy HH:mm")</div>

    <div class="summary-grid">
        <div class="summary-card">
            <div class="label">Fournisseur</div>
            <div class="value">@Model.Provider.Name</div>
            <div class="label">Code: @Model.Provider.Code</div>
            <div class="label">Contact: @Model.Provider.Contact</div>
        </div>
        <div class="summary-card">
            <div class="label">Adresse</div>
            <div>@Model.Provider.Adresse</div>
        </div>
        <div class="summary-card">
            <div class="label">Solde</div>
            <div class="value">@Model.Summary.Solde.FormatAmount(Model.DecimalPlaces) TND</div>
            <div class="label">Total factures: @Model.Summary.TotalFactures.FormatAmount(Model.DecimalPlaces)</div>
            <div class="label">Total factures avoir: @Model.Summary.TotalFacturesAvoir.FormatAmount(Model.DecimalPlaces)</div>
            <div class="label">Total avoirs financiers: @Model.Summary.TotalAvoirsFinanciers.FormatAmount(Model.DecimalPlaces)</div>
            <div class="label">Total paiements: @Model.Summary.TotalPaiements.FormatAmount(Model.DecimalPlaces)</div>
        </div>
    </div>

    <div class="section-title">Documents</div>
    <table>
        <thead>
            <tr>
                <th>Type</th>
                <th>Numéro</th>
                <th>Date</th>
                <th class="text-right">Montant</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Documents.Any())
            {
                foreach (var document in Model.Documents)
                {
                    <tr>
                        <td>@document.Type</td>
                        <td>@document.Numero</td>
                        <td>@document.Date.ToString("dd/MM/yyyy")</td>
                        <td class="text-right">@document.Montant.FormatAmount(Model.DecimalPlaces) TND</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" style="text-align:center;">Aucun document</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="section-title">Paiements</div>
    <table>
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Date</th>
                <th>Méthode</th>
                <th>Facture(s)</th>
                <th class="text-right">Montant</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Payments.Any())
            {
                foreach (var payment in Model.Payments)
                {
                    <tr>
                        <td>@payment.NumeroTransactionBancaire</td>
                        <td>@payment.DatePaiement.ToString("dd/MM/yyyy")</td>
                        <td>@payment.Methode</td>
                        <td>@(payment.Factures?.Any() == true ? string.Join(", ", payment.Factures.Select(f => $"{f.Numero} ({f.MontantTtc.FormatAmount(Model.DecimalPlaces)} TND)")) : "-")</td>
                        <td class="text-right">@payment.Montant.FormatAmount(Model.DecimalPlaces) TND</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" style="text-align:center;">Aucun paiement</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="footer">
        Société @Model.Company.Name - @Model.Company.Adresse - Tel: @Model.Company.Tel - MF: @Model.Company.Matricule
    </div>
</body>
</html>

