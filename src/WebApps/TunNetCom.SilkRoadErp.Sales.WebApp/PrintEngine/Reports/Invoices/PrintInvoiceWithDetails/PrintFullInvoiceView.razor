@using TunNetCom.SilkRoadErp.Sales.WebApp.Helpers
@using TunNetCom.SilkRoadErp.Sales.Contracts.Common
@using TunNetCom.SilkRoadErp.Sales.WebApp.PrintEngine.Reports.Invoices.PrintInvoiceWithDetails

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
        font-family: 'Arial', sans-serif;
        font-size: 12px;
        margin: 0;
        padding: 0;
        }

        table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
        }

        th, td {
        border: 1px solid #000;
        padding: 5px;
        text-align: center;
        }

        th {
        background-color: #f2f2f2;
        font-weight: bold;
        }

        .text-left {
        text-align: left;
        }

        .text-right {
        text-align: right;
        }

        .text-bold {
        font-weight: bold;
        }

        .delivery-note-header {
        background-color: #e6e6e6;
        font-weight: bold;
        }

        .footer-container {
        display: flex;
        margin-top: 20px;
        }

        .tva-bases {
        width: 40%;
        margin-right: 20px;
        }

        .totals {
        width: 50%;
        margin-left: auto;
        }

        .total-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
        }

        .footer {
        margin-top: 10px;
        text-align: center;
        font-style: italic;
        font-size: 11px;
        }

        .rib-footer {
            margin-top: 15px;
            text-align: center;
            font-size: 11px;
            font-weight: bold;
        }

        @@media print {
            .footer-container {
                page-break-inside: avoid;
                break-inside: avoid;
            }
        }
    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Code</th>
                <th class="text-left">Désignation</th>
                <th>Qte</th>
                <th>P.H.T</th>
                <th>Rem %</th>
                <th>TOT H.T</th>
                <th>TVA</th>
                <th>TOT TTC</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var deliveryNote in Model.DeliveryNotes)
            {
                <tr class="delivery-note-header">
                    <td colspan="8">
                        BL N° @deliveryNote.Num - @deliveryNote.Date.ToString("dd/MM/yyyy")
                    </td>
                </tr>

                @foreach (var line in deliveryNote.Lines)
                {
                    <tr>
                        <td>@line.RefProduit</td>
                        <td class="text-left">@line.DesignationLi</td>
                        <td>@line.QteLi</td>
                        <td>@line.PrixHt.FormatAmount()</td>
                        <td>@line.Remise.ToString(DecimalFormatConstants.FORMAT_N2, System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</td>
                        <td>@line.TotHt.FormatAmount()</td>
                        <td>@line.Tva.ToString("N0")%</td>
                        <td>@line.TotTtc.FormatAmount()</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="footer-container" style="display: flex; justify-content: space-between; align-items: flex-start; gap: 30px; margin-top: 20px;">
        <!-- TVA Bases Section -->
        <div class="tva-bases" style="flex: 1; min-width: 0;">
            <table style="width: 100%; border-collapse: collapse;">
                <tr>
                    <th style="text-align: left; padding: 5px; border-bottom: 1px solid #ddd;">tx TVA</th>
                    <th style="text-align: right; padding: 5px; border-bottom: 1px solid #ddd;">@Model.VatRate19.ToString("N0")%</th>
                    <th style="text-align: right; padding: 5px; border-bottom: 1px solid #ddd;">@Model.VatRate13.ToString("N0")%</th>
                    <th style="text-align: right; padding: 5px; border-bottom: 1px solid #ddd;">@Model.VatRate7.ToString("N0")%</th>
                    <th style="text-align: right; padding: 5px; border-bottom: 1px solid #ddd;">Total</th>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px;">Base</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Base19.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Base13.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Base7.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.TotalHT.FormatAmount()</td>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px;">Mt TVA</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Tva19.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Tva13.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.Tva7.FormatAmount()</td>
                    <td style="text-align: right; padding: 5px; font-family: monospace;">@Model.TotalTVA.FormatAmount()</td>
                </tr>
            </table>
        </div>

        <!-- Totals Section -->
        <div class="totals" style="flex: 0 0 auto;">
            <table style="border-collapse: collapse; width: 100%;">
                <tr>
                    <td style="text-align: left; padding: 5px; border-bottom: 1px solid #eee;">Total HT:</td>
                    <td style="text-align: right; padding: 5px; border-bottom: 1px solid #eee; font-family: monospace;">@Model.TotalHT.FormatAmount()</td>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px; border-bottom: 1px solid #eee;">Total TVA:</td>
                    <td style="text-align: right; padding: 5px; border-bottom: 1px solid #eee; font-family: monospace;">@Model.TotalTVA.FormatAmount()</td>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px; border-bottom: 1px solid #eee;">Timbre:</td>
                    <td style="text-align: right; padding: 5px; border-bottom: 1px solid #eee; font-family: monospace;">@Model.Timbre.ToString(DecimalFormatConstants.FORMAT_N3, System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</td>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px; font-weight: bold;">Total TTC:</td>
                    <td style="text-align: right; padding: 5px; font-weight: bold; background-color: #f5f5f5; font-family: monospace;">@Model.TotalTTC.FormatAmount()</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="footer">
        @AmountHelper.ConvertFloatToFrenchToWords(Model.TotalTTC, AmountHelper.TYPE_FACTURE)
    </div>
    @if (!string.IsNullOrEmpty(Model.Rib))
    {
        <div class="rib-footer">
            RIB: @Model.Rib
        </div>
    }
</body>
</html>

@code {
    [Parameter]
    public PrintFullInvoiceModel Model { get; set; }
}