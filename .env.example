# ==============================================================================
# SilkRoadErp Environment Variables Example
# ==============================================================================
# Copy this file to .env and update the values for your environment
# IMPORTANT: Never commit .env file to version control!
# ==============================================================================

# ==============================================================================
# SQL Server Configuration
# ==============================================================================
MSSQL_SA_PASSWORD=YourStrong@Passw0rd
MSSQL_PID=Developer
ACCEPT_EULA=Y

# ==============================================================================
# API Configuration
# ==============================================================================
API_ASPNETCORE_ENVIRONMENT=Production
API_ASPNETCORE_URLS=http://+:8080

# Database Connection
API_CONNECTION_STRING=Server=sqlserver;Database=SlikRoadErpDB;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True;

# JWT Settings
# IMPORTANT: Change these values in production!
API_JWT_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_YourSuperSecretKeyForJWTTokenGenerationMustBeAtLeast32CharactersLong!
API_JWT_ISSUER=SilkRoadErp
API_JWT_AUDIENCE=SilkRoadErp
API_JWT_ACCESS_TOKEN_EXPIRATION_MINUTES=30
API_JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7

# Logging
API_SEQ_SERVER_URL=http://seq:80

# ==============================================================================
# WebApp Configuration
# ==============================================================================
WEBAPP_ASPNETCORE_ENVIRONMENT=Production
WEBAPP_ASPNETCORE_URLS=http://+:8080
WEBAPP_API_BASE_URL=http://api:8080

# ==============================================================================
# Seq Logging Configuration
# ==============================================================================
SEQ_ACCEPT_EULA=Y

# ==============================================================================
# Port Mappings
# ==============================================================================
SQL_SERVER_PORT=1433
API_PORT=5000
WEBAPP_PORT=5001
SEQ_PORT=5341

# ==============================================================================
# Production Security Notes
# ==============================================================================
# Before deploying to production:
# 1. Generate a strong random password for MSSQL_SA_PASSWORD
# 2. Generate a strong random key for API_JWT_SECRET_KEY (min 32 characters)
# 3. Update API_JWT_ISSUER and API_JWT_AUDIENCE to match your domain
# 4. Consider using Docker secrets instead of environment variables
# 5. Enable HTTPS/TLS
# 6. Review and update CORS policies
# ==============================================================================
